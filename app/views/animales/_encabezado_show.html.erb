<div class="principal column content on-2 columns">
    <div class="column fixed">
        <%= render 'fotos/animales_foto_principal' %>
    </div>
    <div class="column elastic">
        <%= render 'bio_encabezado' %>
    </div>
</div>
<div class="usuario column">
    <div id="acciones" style="text-align:right">
        <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-lang="es">Tweet</a>
        <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
        <br/>
        <iframe src="http://www.facebook.com/plugins/like.php?href=quanta.mine.nu&amp;layout=button_count&amp;show_faces=true&amp;width=100&amp;action=recommend&amp;font=arial&amp;colorscheme=light&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:100px; height:21px;" allowTransparency="true"></iframe>
        
        <br/><br/>
        <% if can? :manage, @animal %>
            <%= link_to 'Modificar', edit_animal_path(@animal), :class => 'redondo-3 sombra-5' %>
        <% else %>
            <p><b>Datos de usuario contacto</b></p>
            <p><i><%= @animal.usuario.nombre || "No tiene nombre registrado" %></i></p>
            <p><i><%= @animal.usuario.email %></i></p>
            <p><i><%= @animal.usuario.telefono_movil || "No ha registrado algún teléfono móvil" %></i></p>
            <br/>
        <% end %>
        <%= link_to 'Atrás', animales_path, :class => 'redondo-3 sombra-5' %>
    </div>
    
</div>