<h2>¿Olvidaste tú contraseña?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

  <%= render :partial => 'devise/shared/errores', :locals => {:resource => resource} %>

  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>
  <br/>
  <p><%= f.submit "Envíame instrucciones para restaurarla", :class => 'submit redondo-3' %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>