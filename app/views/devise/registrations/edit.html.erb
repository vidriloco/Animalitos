<h2>Modificar aspectos de mí cuenta</h2>

<%= form_for(resource, :as => resource_name, 
                       :url => registration_path(resource_name), 
                       :html => { :method => :put }) do |f| %>
    <%= render :partial => 'devise/shared/errores', :locals => {:resource => resource} %>
  
  
    <p><%= f.label :nombre %><br />
    <%= f.text_field :nombre %></p>

    <p><%= f.label :email %><br />
    <%= f.text_field :email %></p>
  
    <p><%= f.label :telefono_movil, 'Teléfono Móvil' %><br />
    <%= f.text_field :telefono_movil %></p>
    
    <p><%= f.label :cuenta_en_twitter, 'Cuenta en Twitter' %><br />
        <%= f.text_field :cuenta_en_twitter %>
    </p>
    <p><%= f.label :bio, %><br />
       <%= f.text_area :bio %>
    </p>
  
    <p><%= f.label :password, 'Contraseña' %> <br/><i>(dejar en blanco si no deseas cambiarla)</i><br />
    <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation, 'Confirmación de Contraseña' %> <br/><i>(dejar en blanco si no deseas cambiarla)</i><br />
    <%= f.password_field :password_confirmation %></p>

    <p>
        <%= f.label :current_password, 'Contraseña Actual' %> <br/>
        <i>(requerida para confirmar y guardar los cambios)</i><br />
        <%= f.password_field :current_password %>
    </p>

  <%= f.submit "Actualizar", :class => 'submit redondo-3' %>&nbsp;

<% end %>

<%= content_for :controles do %>
        <%= link_to "Atrás", '/perfil', :class => 'sombra-3 redondo-3' %>
<% end %>
<br/>

<script>
    $("#usuario_bio").charCounter(140, {
        format: "%1 caracteres restantes",
        delay: 100,
        pulse: false
    });
</script>