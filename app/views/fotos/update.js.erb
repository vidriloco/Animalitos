<% if @actualizado %>
	$('.animales #foto_<%= @foto_id_previa %>').removeClass('foto-principal');
	$('.animales #foto_<%= @foto.id %>').addClass('foto-principal');
	
	$('.animales #foto_<%= @foto.id %> .principal').addClass('escondido');
	$('.animales #foto_<%= @foto_id_previa %> .principal').removeClass('escondido');
	
	$('.foto-principal .thumb').replaceWith("<%= escape_javascript render(:partial => 'fotos/tamanos/thumb', :locals => {:animal => @animal}) %>");
<% end %>